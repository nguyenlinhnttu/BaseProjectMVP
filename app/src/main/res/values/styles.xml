<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoActionBar" parent = "AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text_Style_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="EdtText_Style_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_7dp</item>
        <item name="android:paddingBottom">@dimen/_7dp</item>
        <item name="android:paddingLeft">@dimen/_6dp</item>
        <item name="android:paddingRight">@dimen/_6dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button_Style_Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <!--<item name="android:background">@drawable/bg_selector_button_blue</item>-->
        <item name="android:textColor">@color/color_white</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Custom_Button_Style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/bg_selector_button_blue</item>
    </style>

    <style name="ImageView_Button">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginRight">@dimen/_4dp</item>
    </style>

    <style name="Item_Padding_Style">
        <item name="android:paddingTop">@dimen/_6dp</item>
        <item name="android:paddingBottom">@dimen/_6dp</item>
        <item name="android:paddingLeft">@dimen/_8dp</item>
        <item name="android:paddingRight">@dimen/_8dp</item>
    </style>


</resources>
